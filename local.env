# Local Development Environment Variables
# This file sets up the pipeline monitor to run with mock AWS services

# Basic Configuration
NODE_ENV=development
PIPELINE_NAME=ess-publishing-local
PORT=8080
HEALTH_INTERVAL_MS=10000

# AWS Configuration (using local/mock endpoints)
AWS_REGION=us-east-1
AWS_ENDPOINT=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# DynamoDB Tables (will be created automatically by LocalStack)
STATUS_TABLE=PipelineStatus
AUDIT_TABLE=PipelineAudit

# SNS Topic (will be created automatically by LocalStack)
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:pipeline-alerts

# Health Check URLs (using mock services)
VALIDATOR_URL=http://localhost:3001/health
QUEUE_HEALTH_URL=http://localhost:3002/health
VALIDATOR_WARM_URL=http://localhost:3001/warm

# Circuit Breaker Settings
BREAKER_TIMEOUT=5000
ERROR_THRESHOLD=50
VOLUME_THRESHOLD=5
RESET_TIMEOUT=15000

# Audit Settings
AUDIT_TTL_DAYS=7
