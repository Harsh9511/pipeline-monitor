# Pipeline configuration
PIPELINE_NAME=ess-publishing
PORT=8080
HEALTH_INTERVAL_MS=10000

# AWS configuration
AWS_REGION=ap-south-1
STATUS_TABLE=PipelineStatus
AUDIT_TABLE=PipelineAudit
SNS_TOPIC_ARN=arn:aws:sns:ap-south-1:123456789012:pipeline-alerts

# Health check endpoints
VALIDATOR_URL=https://validator.example.com/health
VALIDATOR_WARM_URL=https://validator.example.com/warmup
QUEUE_HEALTH_URL=https://sqs.ap-south-1.amazonaws.com/health

# Circuit breaker settings
BREAKER_TIMEOUT=5000
ERROR_THRESHOLD=50
VOLUME_THRESHOLD=5
RESET_TIMEOUT=15000

# Audit settings
AUDIT_TTL_DAYS=7
